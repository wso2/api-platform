{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["gateway"],
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "commonLabels": {
      "type": "object"
    },
    "commonAnnotations": {
      "type": "object"
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "gateway": {
      "type": "object",
      "required": ["controller", "router", "policyEngine"],
      "properties": {
        "controller": {
          "type": "object",
          "required": ["deployment", "service"],
          "properties": {
            "deployment": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "replicaCount": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "service": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                },
                "ports": {
                  "type": "object",
                  "properties": {
                    "rest": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    },
                    "xds": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    },
                    "policy": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    }
                  }
                }
              }
            },
            "controlPlane": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 65535
                }
              }
            },
            "persistence": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "size": {
                  "type": "string",
                  "pattern": "^[0-9]+(Mi|Gi|Ti)$"
                }
              }
            }
          }
        },
        "router": {
          "type": "object",
          "required": ["deployment", "service"],
          "properties": {
            "deployment": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "replicaCount": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "service": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                },
                "ports": {
                  "type": "object",
                  "properties": {
                    "http": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    },
                    "admin": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    }
                  }
                }
              }
            }
          }
        },
        "policyEngine": {
          "type": "object",
          "required": ["deployment", "service"],
          "properties": {
            "deployment": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "replicaCount": {
                  "type": "integer",
                  "minimum": 0
                }
              }
            },
            "service": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
                },
                "ports": {
                  "type": "object",
                  "properties": {
                    "ext": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 65535
                    }
                  }
                }
              }
            },
            "config": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    }
  }
}
