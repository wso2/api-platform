# Policy Engine Runtime Image
# Generated by Gateway Builder
# Build Time: {{ .BuildTimestamp }}

FROM alpine:3.23.2

# Add ca-certificates for HTTPS
RUN apk --no-cache add ca-certificates

WORKDIR /app

# Create non-root user
RUN addgroup -g 1000 policyengine && \
    adduser -D -u 1000 -G policyengine policyengine

# Copy the compiled binary
COPY policy-engine /app/policy-engine
RUN chmod +x /app/policy-engine

# Set ownership
RUN chown -R policyengine:policyengine /app/policy-engine

# Switch to non-root user
USER policyengine

# Expose default ports
EXPOSE 9001 9002

# Not including a default config file in the Container image.
# This is to mitigate using default values unknowingly.

# Set entry point
# Run the binary
ENTRYPOINT ["/app/policy-engine"]
CMD ["-config=/configs/config.yaml"]

# Metadata labels
LABEL org.opencontainers.image.title="API Platform Policy Engine"
LABEL org.opencontainers.image.description="API Platform Policy Engine with compiled policies"
LABEL org.opencontainers.image.vendor="WSO2"
LABEL build.timestamp="{{ .BuildTimestamp }}"
LABEL build.builder-version="{{ .BuilderVersion }}"
{{- range $key, $value := .Labels }}
LABEL {{ $key }}="{{ $value }}"
{{- end }}
