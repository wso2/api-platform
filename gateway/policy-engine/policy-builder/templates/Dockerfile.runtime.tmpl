# Policy Engine Runtime Image
# Generated by Policy Engine Builder
# Build Time: {{ .BuildTimestamp }}

FROM alpine:3.21.0

# Add ca-certificates for HTTPS
RUN apk --no-cache add ca-certificates

# Create non-root user
RUN addgroup -g 1000 policyengine && \
    adduser -D -u 1000 -G policyengine policyengine

# Copy the compiled binary
COPY policy-engine /usr/local/bin/policy-engine
RUN chmod +x /usr/local/bin/policy-engine

# Set ownership
RUN chown -R policyengine:policyengine /usr/local/bin/policy-engine

# Switch to non-root user
USER policyengine

# Expose default ports
EXPOSE 9001 9002

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD ["/usr/local/bin/policy-engine", "--health-check"]

# Set entry point
ENTRYPOINT ["/usr/local/bin/policy-engine"]

CMD ["-config", "/etc/policy-engine/config.yaml"]

# Metadata labels
LABEL org.opencontainers.image.title="Envoy Policy Engine"
LABEL org.opencontainers.image.description="Custom policy engine with compiled policies"
LABEL org.opencontainers.image.vendor="Policy Engine Builder"
LABEL build.timestamp="{{ .BuildTimestamp }}"
LABEL build.builder-version="{{ .BuilderVersion }}"
{{- range $key, $value := .Labels }}
LABEL {{ $key }}="{{ $value }}"
{{- end }}
