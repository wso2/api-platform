<main>
    {{> header profile=profile baseUrl=baseUrl devportalMode=devportalMode }}
    {{> sidebar profile=profile baseUrl=baseUrl devportalMode=devportalMode }}
    <div class="doc-content me-4">
        <div class="documents">
            <aside class="documents-sidebar">
                {{#docTypes}}
                {{#if (eq type "Specification")}}
                <div>
                    <div class="doc-section-title">
                        Specification
                    </div>
                    <div class="doc-links">
                        <a href="{{../baseDocUrl}}/docs/specification" class="doc-link">
                            <i class="bi bi-code"></i>
                            <div class="doc-title">
                                {{#if (eq ../apiType "MCP")}}
                                    MCP Playground
                                {{else}}
                                    API Definition
                                {{/if}}
                            </div>
                        </a>
                    </div>
                    {{#if (eq ../apiType "WS")}}
                    <div class="doc-links">
                        <a href="{{../baseDocUrl}}/docs/specification?tryout=true" class="doc-link">
                            <i class="bi bi-code"></i>
                            <div class="doc-title">
                                Tryout
                            </div>
                        </a>
                    </div>
                    {{/if}}
                </div>
                {{else}}
                <div>
                    <div class="doc-section-title">
                        {{type}}
                    </div>
                    <div class="doc-links">
                        {{#names}}
                        <a href="{{../../baseDocUrl}}/docs/{{../type}}/{{this}}" class="doc-link">
                            <i class="bi bi-file-text"></i>
                            <div class="doc-title">
                                {{beforeSeparator this "."}}
                            </div>
                        </a>
                        {{/names}}
                    </div>
                </div>
                {{/if}}
                {{/docTypes}}
            </aside>
            <div class="doc-content-wrapper">
                <section class="doc-section">
                    {{> api-doc}}
                </section>
            </div>
        </div>
    </div>
</main>
