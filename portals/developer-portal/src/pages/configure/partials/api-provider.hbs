<div id="providerDetails">
<section>
   <div class="d-flex justify-content-end mb-3">
                <button type="button" class="common-btn-outlined" id="createProviderBtn">
                    <i class="bi bi-plus-circle me-1"></i> Provider
                </button>
    </div> 
  <div id="providerList">
            <table class="table table-striped mt-4">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>URL</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#apiProviders}}
                    <tr>
                        <td> <input type="text" id="name" name="name" class="form-control" value="{{name}}"> </td>
                        <td> <input type="url" id="providerUrl" class="form-control" name="providerURL"
                                value="{{providerURL}}"> </td>
                        <td class="text-center">
                            <button type="button" class="common-btn-outlined" title="Edit" id="providerEdit"
                                onclick="editProvider('{{../orgID}}', 'editProviderForm{{name}}')">
                                    <i class="bi bi-save"></i>
                            </button>
                            <button type="button" class="common-btn-outlined btn-outline-danger" title="Delete" onclick="if (confirm('Are you sure you want to delete this Provider?')) 
                                { deleteProvider('{{../orgID}}', '{{name}}', 'providerURL'); }">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                    {{/apiProviders}}
                </tbody>
            </table>
        </div>
</section>
</div> 
<div id="addProvider" style="display: none;">
    {{> create-provider}}
</div>

