<div id="planModal-{{apiID}}" class="modal custom-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content custom-modal-content">
            <div class="custom-modal-header">
                <h2 class="custom-modal-title m-0">Update Your Subscription Plan</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                    onclick="closeModal('planModal-{{apiID}}')"></button>
            </div>
            <div class="custom-modal-body p-0">
                <div class="subscription-plans-body pb-4 pt-4">
                    <p class="subscription-plans-subtitle">Please select the most suitable subscription plan from the options
                        available for this API</p>
                    <div class="row row-gap-4 pt-3">
                        {{#each subscriptionPolicyDetails}}
                        <div class="col-lg-4">
                            <div id="api-card-{{../apiID}}-{{policyName}}" class="card dev-card" {{#if (eq displayName
                                ../selectedPlan)}} style="border-color: var(--primary-main-color);" {{/if}}>
                                <div class="card-body align-items-center text-center p-0">
                                    <span class="subscription-plans-card-title">{{displayName}}</h5>
                                        <h1 class="subscription-plans-request-count">{{requestCount}}</h1>
                                        <p class="subscription-plans-card-subtitle pb-4 pt-0">requests per minutes</p>
                                        <a id="subscribe-btn-{{../apiID}}-{{policyName}}" type="button"
                                            class="common-btn-outlined p-1 ps-2 pe-2 w-100 subscription-plan-subscribe-btn {{#if (eq displayName ../selectedPlan)}} disabled {{/if}}"
                                            {{#if (eq displayName ../selectedPlan)}} style="pointer-events: none;"
                                            {{/if}}
                                            onclick="showSubscribeButtonLoading(this); updateSubscription('{{@root.orgID}}', '{{../appID}}', '{{../apiID}}', '{{../refID}}', '{{policyID}}', '{{policyName}}', '{{../selectedPlan}}', '{{../subID}}')">Update</a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="d-flex justify-content-end mb-3" id="applicationKeyUpdateButtonContainer">
                    <button class="common-btn-outlined pr-3 me-3" type="button" onclick="closeModal('planModal-{{apiID}}')">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>