    "version": "0.2.0",
    "configurations": [
        {
            "name": "Platform API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/platform-api/src/cmd/main.go",
            "cwd": "${workspaceFolder}/platform-api/src",
        },
        {
            "name": "Gateway Controller",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gateway/gateway-controller/cmd/controller/main.go",
            "args": [
                "-config",
                "${workspaceFolder}/gateway/gateway-controller/config/config.yaml",
            ],
            "env": {
                "GATEWAY_STORAGE_SQLITE_PATH": "${workspaceFolder}/gateway/gateway-controller/data/gateway.db",
                "GATEWAY_CONTROLPLANE_TOKEN": "",
                "POLICY_DIRECTORY": "${workspaceFolder}/gateway/gateway-controller/policies",
            }
        },
        {
            "name": "Policy Builder",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gateway/policy-engine/policy-builder/cmd/builder",
            "args": [
                "-manifest", "${workspaceFolder}/gateway/policy-engine/policies.yaml",
                "-policy-engine-src", "${workspaceFolder}/gateway/policy-engine/policy-engine",
                "-out-dir", "${workspaceFolder}/gateway/policy-engine/policy-builder/bin/output",
                "-log-level", "debug",
            ],
        },
        {
            "name": "Policy Engine - xDS",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gateway/policy-engine/policy-engine/cmd/policy-engine",
            "args": [
                "-config", "${workspaceFolder}/gateway/policy-engine/configs/config.yaml" ,
                "-xds-server", "localhost:18001",
                "-xds-node-id", "node-1",
            ],
        },
        {
            "name": "Policy Engine - File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/gateway/policy-engine/policy-engine/cmd/policy-engine",
            "args": [
                "-config", "${workspaceFolder}/gateway/policy-engine/configs/config.yaml",
                "-policy-chains-file", "${workspaceFolder}/gateway/policy-engine/configs/policy-chains.yaml",
            ],
        },
    ]
}